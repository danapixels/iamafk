FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Create data directory
RUN mkdir -p data

# Use production server file
RUN cp server.prod.js server.js

# Expose port
EXPOSE 3001

# Start the application
CMD ["node", "server.js"] 